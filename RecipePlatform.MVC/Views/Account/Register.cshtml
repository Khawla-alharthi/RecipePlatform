@model RecipePlatform.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-user-plus text-primary"></i>
                        Join TasteBud
                    </h2>
                    <p class="text-muted mt-2">Create your account and start sharing recipes</p>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label">
                                        <i class="fas fa-user"></i> First Name
                                    </label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                                    <span asp-validation-for="FirstName" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label">
                                        <i class="fas fa-user"></i> Last Name
                                    </label>
                                    <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                                    <span asp-validation-for="LastName" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email Address
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="form-label">
                                <i class="fas fa-calendar"></i> Date of Birth
                            </label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="invalid-feedback"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password" class="form-label">
                                        <i class="fas fa-lock"></i> Password
                                    </label>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" />
                                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                                    <div class="form-text">
                                        <small>Password must be at least 8 characters with uppercase, lowercase, and numbers.</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="form-label">
                                        <i class="fas fa-lock"></i> Confirm Password
                                    </label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                                    <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-user-plus"></i> Create Account
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">
                        Already have an account?
                        <a asp-action="Login" class="text-primary">
                            <i class="fas fa-sign-in-alt"></i> Sign in here
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

